{
  "build": {
    "beforeDevCommand": "pnpm web:dev",
    "beforeBuildCommand": "echo 注意：运行此命令前需手动运行 `pnpm web:build`",
    "devPath": "http://localhost:6408",
    "distDir": "../dist"
  },
  "package": {
    "productName": "ExCaller",
    "version": "0.2.0"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "app.is-an.ex-caller",
      "publisher": "Zihan Hu",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "windows": {
        "wix": {
          "language": ["zh-CN"]
        },
        "nsis": {
          "languages": ["zh-CN"]
        },
        "webviewInstallMode": {
          "type": "embedBootstrapper"
        }
      }
    },
    "windows": [{
      "fullscreen": false,
      "resizable": true,
      "title": "ExCaller",
      "width": 800,
      "height": 600,
      "center": true
    }]
  }
}
