{
  "build": {
    "beforeDevCommand": "pnpm cross-env EXC_ENV=App 'pnpm web:dev'",
    "beforeBuildCommand": "",
    "devPath": "http://localhost:6408",
    "distDir": "../dist"
  },
  "package": {
    "productName": "ExCaller",
    "version": "0.4.0"
  },
  "tauri": {
    "allowlist": {
      "dialog": {
        "all": true
      },
      "fs": {
        "writeFile": true
      },
      "path": {
        "all": true
      },
      "shell": {
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "app.is-an.ex-caller",
      "publisher": "Zihan Hu",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "windows": {
        "wix": {
          "language": ["zh-CN"]
        },
        "nsis": {
          "languages": ["SimpChinese"]
        },
        "webviewInstallMode": {
          "type": "embedBootstrapper"
        }
      }
    },
    "windows": [{
      "fullscreen": false,
      "resizable": true,
      "title": "ExCaller",
      "width": 800,
      "height": 600,
      "center": true
    }]
  }
}
